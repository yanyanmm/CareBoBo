<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.lihg.library.toolbar.YToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toolbar_title="@string/menu_home"
        app:toolbar_backView_hide="true"/>
    <com.lihg.library.tabbarlayout.YTabbarLayout
        android:id="@+id/tabbarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabbar_selected_style="background">
    </com.lihg.library.tabbarlayout.YTabbarLayout>
</LinearLayout>